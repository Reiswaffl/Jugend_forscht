#: import FadeTransition kivy.uix.screenmanager.FadeTransition
#:set home "main"

ScreenManagement:
    transition: FadeTransition()
    MainScreen:
    TestScreen2:
    TestScreen3:

<MainScreen>:
    id: mainScreen
    name: "main"
    canvas.before:
        Rectangle:
            source:"sources/1.png"
            size: self.size
            pos: self.pos
    GridLayout:
        cols: 1
        Button:
            background_color: (1.0, 1.0, 1.0, 1.0)
            text: "switch screens"
            on_touch_down: if self.collide_point(*args[1].pos): app.root.current = root.Switch()
            #pos: 0, 538
            size_hint: 1, .1
        GridLayout:
            rows: 1
            #pos: -128, -192
            Image:
                #pos: -128, -192
			    source: 'sources/blank.png'
                on_touch_down: if self.collide_point(*args[1].pos): root.setHome("testscreen3")
            Image:
                #pos: -128, -10
                source: 'sources/blank.png'
                on_touch_down: if self.collide_point(*args[1].pos): root.setHome("testscreen2")
            Image:
                source: 'sources/blank.png'
                on_touch_down: if self.collide_point(*args[1].pos): print("yess")

