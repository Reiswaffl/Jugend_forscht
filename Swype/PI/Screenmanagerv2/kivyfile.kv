#: import FadeTransition kivy.uix.screenmanager.FadeTransition

ScreenManagement:
    transition: FadeTransition()
    TestScreen2:
    MainScreen:
    TestScreen3:
    Numpad:
    Calculator:
    Spotify:

<MainScreen>:
    id: mainScreen
    name: "main"
    canvas.before:
        Rectangle:
            source:"sources/background/4.png"
            size: self.size
            pos: self.pos
    GridLayout:
        cols: 1
        Button:
            background_color: (1.0, 1.0, 1.0, 1.0)
            text: "switch"
            on_touch_down: if self.collide_point(*args[1].pos): app.root.current = root.Switch()
            size_hint: 1, .1
        GridLayout:
            rows: 1
            Image:
                #pos: -128, -192
			    source: 'sources/icons/blank.png'
                on_touch_down: if self.collide_point(*args[1].pos): root.setHome("testscreen3")
            Image:
                source: 'sources/icons/blank.png'
                on_touch_down: if self.collide_point(*args[1].pos): root.setHome("testscreen2")
            Image:
                source: 'sources/icons/blank.png'
                on_touch_down: if self.collide_point(*args[1].pos): app.root.current = "Numpad"

