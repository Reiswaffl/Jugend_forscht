#: import FadeTransition kivy.uix.screenmanager.FadeTransition

ScreenManagement:
    transition: FadeTransition()
    MainScreen:


<MainScreen>:
    id: mainScreen
    name: "main"
    GridLayout:
        rows: 1
        Image:
            source: 'shortcuts/copy.png'
            on_touch_down: if self.collide_point(*args[1].pos): root.send("m1")
        Image:
            source: 'shortcuts/paste.png'
            on_touch_down: if self.collide_point(*args[1].pos): root.send("m2")
        Image:
			source: 'shortcuts/numpad.png'
            on_touch_down: if self.collide_point(*args[1].pos): app.root.current = "TestScreen2"
        Image:
            source: 'shortcuts/calculator.png'
            on_touch_down: if self.collide_point(*args[1].pos): print("yess")

<TestScreen2>:
    id: testScreen2
    name: "tS2"
    GridLayout:
        rows: 3
        Image:
            source: 'sources/word.png'
        Image:
            source: 'sources/stick.png'
